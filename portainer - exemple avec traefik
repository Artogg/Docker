services:
  portainer:
    image: "portainer/portainer-ce:latest"
    container_name: portainer
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /mon/host/chemin:/data
    ports:
      - host:container
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.portainer.rule=Host(`cname.dns.com`)"
      - "traefik.http.routers.portainer.entrypoints=websecure"
      - "traefik.http.routers.portainer.tls=true"
      - "traefik.http.services.portainer.loadbalancer.server.port=portcontainer"



    networks:
      - traefik

networks:
  traefik:
    external: true
